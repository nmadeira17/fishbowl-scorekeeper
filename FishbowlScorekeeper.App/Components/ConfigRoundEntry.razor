@inherits ConfigRoundEntryBase

@{ 
	int roundNum = IRound + 1;
}

<div style="display: flex; flex-flow: row">
	<p>Round @roundNum name:</p>
	<input type="text" @onchange="OnNameChange" value="@Name" />
	<p>Time Limit (seconds):</p>
	<input type="number" @onchange="OnDurationChange" value="@Duration" />
</div>