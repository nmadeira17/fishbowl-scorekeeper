@inherits ScoreboardBase

<div class="score-board-full green">
	<h2>Score</h2>
	<table>
		<thead>
			<tr>
				<th />
				@for (int i = 0; i < m_gameActor.Config.Teams.Count; i++)
				{
				<th>@m_gameActor.Config.Teams[i].Name</th>
				}
			</tr>
		</thead>
		<tbody>
			@for (int i = 0; i < m_gameActor.Config.Rounds.Count; i++)
			{
			<tr>
				<td>@m_gameActor.Config.Rounds[i].Name</td>
				@for (int j = 0; j < m_gameActor.Config.Teams.Count; j++)
				{
				<td>@m_gameActor.Score.GetScore(j, i)</td>
				}
			</tr>
			}
		<tr>
			<td>Total</td>
			@for (int i = 0; i < m_gameActor.Config.Teams.Count; i++)
			{
			<td>@m_gameActor.Score.GetTeamTotal(i)</td>
			}
		</tr>
		</tbody>
	</table>
</div>
